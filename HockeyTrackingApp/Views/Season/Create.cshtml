@model HockeyTrackingApp.Models.Season


@{
    ViewBag.Title = "New Season";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create New Season</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(excludePropertyErrors: false);

    @Html.LabelFor(x => x.SeasonName);
    @Html.TextBoxFor(x => x.SeasonName);

    @Html.Label("Year");
    @Html.DropDownList("Year", ViewBag.Years as SelectList);

    @Html.Label("StartDate", "Start Date")
    //@Html.TextBox("StartDate", Model.StartDate.HasValue ? Model.StartDate.Value.ToShortDateString() : null, new { type="date" })
    @Html.TextBoxFor(x=> x.StartDate, new { type="date" })

    @Html.LabelFor(x => x.EndDate);
    @Html.TextBoxFor(x=> x.EndDate, new { type="date" })

    <input type="submit" name="submit" value="Create" />
}

